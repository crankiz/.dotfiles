# Bin paths
export PATH=/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin:/mnt/c/Windows/

# History settings
export HISTCONTROL=ignoreboth
export HISTIGNORE="ls:ps:bg:fg:history"
export HISTSIZE=1000000
export HISTFILESIZE=1000000
export HISTTIMEFORMAT='%F %T '
export PROMPT_COMMAND='history -a'
shopt -s cmdhist
shopt -s histappend

export DISPLAY=:0.0

if [ -n "$DISPLAY" ]; then
    export BROWSER='/mnt/c/Program\ Files\ \(x86\)/Google/Chrome/Application/chrome.exe'
else 
    export BROWSER=lynx
fi

EDITOR=/bin/vim
